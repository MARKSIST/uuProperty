{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "eslint-hi",
      "type": "shell",
      "command": "${workspaceFolder}/uu_property_maing01-hi/node_modules/.bin/eslint",
      "options": { "cwd": "${workspaceFolder}/uu_property_maing01-hi" },
      "args": ["./src", "./test", "./mock"],
      "problemMatcher": "$eslint-stylish"
    },
    {
      "label": "eslint-server",
      "type": "shell",
      "command": "${workspaceFolder}/uu_property_maing01-server/node_modules/.bin/eslint",
      "args": ["./app"],
      "options": { "cwd": "${workspaceFolder}/uu_property_maing01-server" },
      "problemMatcher": "$eslint-stylish"
    },
    {
      "label": "eslint-all",
      "dependsOn": ["eslint-client", "eslint-server"],
      "dependsOrder": "sequence",
      "problemMatcher": "$eslint-stylish",
      "runOptions": { "runOn": "folderOpen" }
    }
  ]
}
